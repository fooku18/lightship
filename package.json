  "ava": {
    "extensions": {
      "ts": "module"
    }
  },
  "dependencies": {
    "delay": "^5.0.0",
    "fastify": "^4.17.0",
    "roarr": "^7.14.0",
    "serialize-error": "^8.1.0"
  },
  "description": "Abstracts readiness, liveness and startup checks and graceful shutdown of Node.js services running in Kubernetes.",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.6",
    "@semantic-release/npm": "^9.0.1",
    "@types/http-terminator": "^2.0.2",
    "@types/node": "^18.11.9",
    "@types/roarr": "^2.14.3",
    "@types/sinon": "^10.0.13",
    "ava": "^5.2.0",
    "axios": "^1.4.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.28.0",
    "eslint-config-canonical": "^37.0.3",
    "gitdown": "^3.1.5",
    "husky": "^5.0.0",
    "nyc": "^15.1.0",
    "semantic-release": "^19.0.5",
    "sinon": "^14.0.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^4.9.3"
  },
  "files": [
    "src",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run typecheck && npm run test && npm run build"
    }
  },
  "type": "module",
  "keywords": [
    "kubernetes"
  ],
  "license": "BSD-3-Clause",
  "name": "lightship",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/lightship"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsc --project ./tsconfig.build.json",
    "generate-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./test",
    "test": "NODE_OPTIONS='--loader=tsx --no-warnings' ava --verbose --serial",
    "typecheck": "tsc --noEmit"
  },
  "version": "1.0.0"
}
